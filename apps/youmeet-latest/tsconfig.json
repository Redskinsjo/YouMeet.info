{
  "extends": "@youmeet/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "ts-node": { "esm": true },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.tsx",
    "i18n/index.js",
    ".next/types/**/*.ts",
    "**/*.mjs",
    "next.config.js",
    "app/**/*.{ts,tsx}"
  ],
  "exclude": ["node_modules"]
}
