{
  "extends": "@youmeet/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "ts-node": { "esm": true },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.tsx",
    "i18n/index.js",
    ".next/types/**/*.ts",
    "**/*.mjs",
    "next.config.js",
    "app/**/*.{ts,tsx}",
    "../../packages/ui/conversationComponents/conversationChild.tsx",
    "../../packages/ui/dashboardComponents/dashboardChild.tsx",
    "../../packages/ui/formComponents/steps/FormComponentLoading.tsx",
    "../../packages/ui/formComponents/steps/PageContent.tsx",
    "../../packages/ui/formComponents/steps/PageContentChild.tsx",
    "../../packages/ui/formComponents/steps/PageContentLoading.tsx",
    "../../packages/ui/formComponents/steps/PageContentTitle.tsx",
    "../../packages/ui/formComponents/steps/PageContentTitleChild.tsx",
    "../../packages/ui/formComponents/steps/RightPartChild.tsx",
    "../../packages/ui/formComponents/steps/RightPartFormComponent.tsx",
    "../../packages/ui/formComponents/steps/RightPartFormComponentLoading.tsx",
    "../../packages/ui/formComponents/steps/StepPath.tsx",
    "../../packages/ui/formComponents/steps/formChild.tsx",
    "../../packages/ui/productComponents/productChildComponent.tsx",
    "../../packages/ui/mediaComponents/mediaChild.tsx",
    "../../packages/ui/oneOfferComponents/offerChild.tsx",
    "../../packages/ui/offresComponent/offresChild.tsx",
    "../../packages/ui/candidateProfileComponents/candidateChild.tsx",
    "../../packages/ui/resetPasswordComponents/resetPasswordContent.tsx",
    "../../packages/ui/rootComponents/contentProvider.tsx",
    "../../packages/ui/rootComponents/authUpdate.tsx",
    "../../packages/ui/rootComponents/providers.tsx",
    "../../packages/ui/_homeComponents/homeChild.tsx"
  ],
  "exclude": ["node_modules"]
}
