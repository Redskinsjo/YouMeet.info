{
  "extends": "@youmeet/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.tsx",
    "i18n/index.js",
    ".next/types/**/*.ts",
    "**/*.mjs",
    "next.config.js",
    "app",
    "app/[candidateName]",
    "app/@loginModal",
    "app/@recordModal",
    "app/api",
    "app/backoffice",
    "app/blog",
    "app/competences",
    "app/conditions-generales-utilisation",
    "app/dashboard",
    "app/enregistrer",
    "app/formulaire-profil",
    "app/le-produit",
    "app/medias",
    "app/offres",
    "app/regles-de-confidentialite",
    "app/reinitialiser-mot-de-passe",
    "app/se-connecter"
  ],
  "exclude": ["node_modules"]
}
