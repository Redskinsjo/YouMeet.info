{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "env": ["*"],
      "dependsOn": ["codegen"],
      "persistent": true,
      "cache": false
    },
    "codegen": {
      "env": ["*"],
      "outputs": ["gql/generated.ts"]
    },
    "type-check": {}
  }
}
