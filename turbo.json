{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": { "signature": true },
  "tasks": {
    "turbo-analyse": {
      "env": ["*"],
      "dependsOn": ["generate", "^codegen", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build": {
      "env": ["*"],
      "dependsOn": ["generate", "^codegen", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "env": ["*"],
      "dependsOn": ["generate", "codegen"],
      "persistent": true,
      "cache": false
    },
    "codegen": {
      "env": ["*"],
      "outputs": ["gql/generated.ts"]
    },
    "format": {
      "dependsOn": ["^format"],
      "env": ["*"]
    },
    "db-push-dev": {
      "dependsOn": ["^db-push-dev"],
      "env": ["*"]
    },
    "db-push": {
      "dependsOn": ["^db-push"],
      "env": ["*"]
    },
    "generate": {
      "dependsOn": ["^generate"],
      "env": ["*"]
    },
    "type-check": {}
  }
}
